{
    "env": {
        "browser": true,
        "es2022": true
    },
    "extends": [
        "plugin:prettier/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "overrides": [
        {
            "files": [
                "*.html",
                "*.js",
                "*.mjs"
            ]
        }
    ],
    "rules": {
        "prettier/prettier": "error"
    }
}
